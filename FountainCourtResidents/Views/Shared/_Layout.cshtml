<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light app-navbar">
        <div class="container">
            @{
                var brandHref = Url.Action("Index", "Home");
                if (User != null && User.Identity != null && User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Landlord"))
                    {
                        brandHref = Url.Action("Dashboard", "Landlord");
                    }
                    else if (User.IsInRole("Tenant"))
                    {
                        brandHref = Url.Action("Dashboard", "Tenant");
                    }
                }
            }

            <a class="navbar-brand app-brand" href="@brandHref">Fountain Court</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (User != null && User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Landlord"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Dashboard", "Dashboard", "Landlord", null, new { @class = "nav-link app-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Room Types", "Index", "Landlord", null, new { @class = "nav-link app-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Manage Tenants", "Tenants", "Landlord", null, new { @class = "nav-link app-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Applications", "Applications", "Landlord", null, new { @class = "nav-link app-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Notices", "Notices", "Landlord", null, new { @class = "nav-link app-link" })
                            </li>
                        }
                        else if (User.IsInRole("Tenant"))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("My Dashboard", "Dashboard", "Tenant", null, new { @class = "nav-link app-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Maintenance", "Maintenance", "Tenant", null, new { @class = "nav-link app-link" })
                            </li>
                        }
                    }
                </ul>

                @Html.Partial("_LoginPartial")  @* we’ll style this below *@
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <div class="container grid grid--footer">
                <!-- Brand / Social -->
                <div class="logo-col">
                    <a class="footer-logo" href="@Url.Action("Index","Home")" aria-label="Fountain Court home">
                        <span class="navbar-brand app-brand">Fountain Court</span>
                    </a>

                    <ul class="social-links">
                        <li>
                            <a class="footer-link" href="#" aria-label="Instagram">
                                <ion-icon class="social-icon" name="logo-instagram"></ion-icon>
                            </a>
                        </li>
                        <li>
                            <a class="footer-link" href="#" aria-label="Facebook">
                                <ion-icon class="social-icon" name="logo-facebook"></ion-icon>
                            </a>
                        </li>
                        <li>
                            <a class="footer-link" href="#" aria-label="Twitter">
                                <ion-icon class="social-icon" name="logo-twitter"></ion-icon>
                            </a>
                        </li>
                    </ul>

                    <p class="copyright">
                        Copyright &copy; @DateTime.Now.Year by Fountain Court Residents. All rights reserved.
                    </p>
                </div>

                <!-- Address -->
                <div class="address-col">
                    <p class="footer-heading">Contact us</p>
                    <address class="contacts">
                        <p class="address">456 Virtual Blvd., Cape Town, South Africa</p>
                        <p>
                            <a class="footer-link" href="tel:+271234567890">+27 123-456-7890</a><br />
                            <a class="footer-link" href="mailto:hello@fountaincourt.local">hello@fountaincourt.local</a>
                        </p>
                    </address>
                </div>

                <!-- Account -->
                <nav class="nav-col">
                    <p class="footer-heading">Account</p>
                    <ul class="footer-nav">

                        <li><a class="footer-link" href="@Url.Action("Login","Account")">Sign in</a></li>
                        <li><a class="footer-link" href="#">iOS app (Coming soon)</a></li>
                        <li><a class="footer-link" href="#">Android app (Coming soon)</a></li>
                    </ul>
                </nav>

                <!-- Company -->
                <nav class="nav-col">
                    <p class="footer-heading">Company</p>
                    <ul class="footer-nav">
                        <li><a class="footer-link" href="@Url.Action("Index","Home")#about">About Fountain Court</a></li>
                        <li><a class="footer-link" href="@Url.Action("Dashboard","Landlord")">For Landlords</a></li>
                        <li><a class="footer-link" href="#">Partners</a></li>
                        <li><a class="footer-link" href="#">Careers</a></li>
                    </ul>
                </nav>
            </div>
        </footer>

        @* Ionicons (place just before </body> once) *@
        <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>




    </div>
    <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@400;500;600&family=Playfair+Display:wght@700;800&display=swap" rel="stylesheet">

    <style>
        /* ******************************* */
        /* Footer (px + compact sizing)    */
        /* ******************************* */
        /* Navbar styled to echo the footer look (lighter, subtle border) */
        .app-navbar {
            background: rgba(255,255,255,.85);
            backdrop-filter: blur(8px);
            border-bottom: 1px solid #eef2f7;
            box-shadow: 0 6px 18px rgba(31,42,55,.06);
            padding-top: 10px;
            padding-bottom: 10px;
            font-family: "Inter Tight", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        }

        .app-brand {
            font-family: "Playfair Display", Georgia, "Times New Roman", serif;
            font-weight: 800;
            letter-spacing: .3px;
            color: #1f2a37 !important;
            font-size: 22px;
        }

        /* Nav links (subtle underline on hover, same as login page tone) */
        .app-link {
            position: relative;
            font-weight: 500;
            color: #374151 !important;
            padding: 8px 12px !important;
        }

            .app-link:hover {
                color: #111827 !important;
            }

            .app-link::after {
                content: "";
                position: absolute;
                left: 12px;
                right: 12px;
                bottom: 6px;
                height: 2px;
                background: #0f81c7;
                opacity: 0;
                transform: scaleX(.4);
                transition: transform .18s ease, opacity .18s ease;
            }

            .app-link:hover::after {
                opacity: 1;
                transform: scaleX(1);
            }

        /* Auth buttons (pill style, same family as login screen) */
        .app-btn-primary {
            background: linear-gradient(180deg, #0f81c7 0%, #0a6fab 100%);
            color: #fff !important;
            border: 1px solid #0a6fab;
            border-radius: 999px;
            padding: 6px 14px;
            font-weight: 600;
            box-shadow: 0 6px 16px rgba(15,129,199,.18);
        }

            .app-btn-primary:hover {
                filter: brightness(1.05);
            }

        .app-btn-ghost {
            background: rgba(15,129,199,.06);
            color: #0a6fab !important;
            border: 1px solid rgba(15,129,199,.25);
            border-radius: 999px;
            padding: 6px 14px;
            font-weight: 600;
        }

        /* Toggler visibility on light bg */
        .navbar-light .navbar-toggler {
            border-color: rgba(0,0,0,.08);
        }

        .navbar-light .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='rgba(31,42,55,0.6)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        /* Compact on mobile */
        @@media (max-width: 991.98px) {
            .app-link::after {
                display: none;
            }

            .app-navbar {
                padding-top: 8px;
                padding-bottom: 8px;
            }
        }

        .navbar-light .navbar-nav .nav-link {
            color: #555;
        }

            .navbar-light .navbar-nav .nav-link:hover,
            .navbar-light .navbar-nav .nav-link:focus {
                color: #111;
            }

        .navbar-toggler {
            border-color: rgba(0,0,0,.1);
        }


        .footer {
            padding: 24px 0;
            border-top: 1px solid #eee;
            background-color: #e7f2f94a;
        }

        .grid {
            display: grid;
            gap: 16px;
        }

        .grid--footer {
            grid-template-columns: 1.5fr 1fr 1fr 1fr;
        }

        .logo-col {
            display: flex;
            flex-direction: column;
        }

        .footer-logo {
            display: block;
            margin-bottom: 20px;
            text-decoration: none;
        }

        .logo-text {
            font-weight: 700;
            font-size: 18px;
            letter-spacing: 0.3px;
            color: #222;
        }

        .social-links {
            list-style: none;
            display: flex;
            gap: 16px;
            padding: 0;
            margin: 0 0 10px 0;
        }

        .social-icon {
            height: 20px;
            width: 20px;
            vertical-align: middle;
        }

        .copyright {
            font-size: 12px;
            line-height: 1.6;
            color: #767676;
            margin-top: auto;
        }

        .footer-heading {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 12px;
        }

        .contacts {
            font-style: normal;
            font-size: 14px;
            line-height: 1.6;
        }

        .address {
            margin-bottom: 10px;
        }

        .footer-nav {
            list-style: none;
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 0;
            margin: 0;
        }

        .footer-link:link,
        .footer-link:visited {
            text-decoration: none;
            font-size: 14px;
            color: #767676;
            transition: color .2s ease;
        }

        .footer-link:hover,
        .footer-link:active {
            color: #555;
        }


        .footer {
            padding: 16px 0;
        }
    </style>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.6.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



</body>
</html>
