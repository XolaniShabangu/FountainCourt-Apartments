@model FountainCourtResidents.Models.RoomType
@{
    ViewBag.Title = "Add Room Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add Room Type</h2>

@using (Html.BeginForm("Create", "Landlord", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "e.g. Studio" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PricePerMonth, "Price per month (ZAR)")
        @Html.TextBoxFor(m => m.PricePerMonth, new { @class = "form-control", type = "number", step = "0.01", min = "0" })
        @Html.ValidationMessageFor(m => m.PricePerMonth)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SquareMeters, "Size (m²)")
        @Html.TextBoxFor(m => m.SquareMeters, new { @class = "form-control", type = "number", step = "1", min = "0" })
        @Html.ValidationMessageFor(m => m.SquareMeters)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TotalUnits, "Total units")
        @Html.TextBoxFor(m => m.TotalUnits, new { @class = "form-control", type = "number", step = "1", min = "0" })
        @Html.ValidationMessageFor(m => m.TotalUnits)
        <small class="text-muted d-block">How many apartments of this type exist in the building.</small>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.UnitsAvailable, "Units available")
        @Html.TextBoxFor(m => m.UnitsAvailable, new { @class = "form-control", type = "number", step = "1", min = "0" })
        @Html.ValidationMessageFor(m => m.UnitsAvailable)
        <small class="text-muted d-block">If empty/0 and Total &gt; 0, we’ll default this to Total.</small>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" }) Active (visible in dropdown)
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-link" })
}

@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
